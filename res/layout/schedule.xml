<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/water2"
    android:orientation="vertical" >

    <Button
        android:id="@+id/sd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="#0099cc"
        android:text="Schedule"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" >
    </Button>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="Dates of the Conference"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="normal" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="September 4th to 7th\n\n"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="normal" >
            </TextView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="fill_horizontal"
                android:text="OSMECON-2014 starts in:\n"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="normal" >
            </TextView>

            <TextView
                android:id="@+id/count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text=""
                android:textColor="#222299"
                android:textSize="55sp"
                android:textStyle="normal" >
            </TextView>

            <!--
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="fill_horizontal"
                android:text="\nYou can also place an OSMECON widget on your home screen. Exact schedule with details of events on each day will be updated soon."
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="normal" >
            </TextView>
            -->
            <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center" >
            
            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/sdll" >
            </ImageView>
           </LinearLayout>
             
            <!-- <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="fill_horizontal"
                android:text="Detailed hourly schedule will be updated soon."
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal" >
            </TextView>            -->
        </LinearLayout>
    </ScrollView>

</LinearLayout>